<form action="/insertData" method="post">
    <table border="2">
        <input type="hidden" name="editid" value="<%= single.id %>">
        <tr>
            <td>Book Name :-</td>
            <td><input type="text" name="name" value="<%= single.name %>"></td>
        </tr>
        <tr>
            <td>Book Price :-</td>
            <td><input type="text" name="price" value="<%= single.price %>"></td>
        </tr>
        <tr>
            <td>Book Pages :-</td>
            <td>
                <select name="page">
                    <option value="">---Select Book Pages---</option>
                    <% let
                        page=["100-200","200-300","300-400","400-500","500-600","600-700","700-800","800-900","900-above"]
                        for(let i in page){ %>
                        <option <% if(single.page==page[i]){ %>selected <%} %>value="<%= page[i] %>">
                                    <%= page[i] %>
                        </option>
                        <% } %>
                </select>
            </td>
        </tr>
        <tr>
            <td>Book Author :-</td>
            <td><input type="text" name="author" value="<%= single.author %>"></td>
        </tr>
        <tr>
            <td></td>
            <td>
                <% if(single){ %>
                    <input type="submit" value="Edit">
                <% } else { %>
                    <input type="submit">
                <% } %>
            </td>
        </tr>
    </table>
</form>

<table border="2">
    <thead>
        <tr>
            <td>Book Name</td>
            <td>Book Price</td>
            <td>Book Page</td>
            <td>Book Author</td>
            <td>Action</td>
        </tr>
    </thead>
    <tbody>
        <% user.map((val)=>{
            const {id,name,price,page,author} = val; %>
            <tr>

                <td>
                    <%= name%>
                </td>
                <td>
                    <%= price%>
                </td>
                <td>
                    <%= page%>
                </td>
                <td>
                    <%= author%>
                </td>
                <td>
                    <a href="/DeleteData/<%= id %>">Delete</a> ||
                    <a href="/EditData/<%= id %>">Edit</a>
                </td>
            </tr>
            <% }) %>
    </tbody>
</table>